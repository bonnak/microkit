{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "moduleResolution": "node",
    "noResolve": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "lib"]
}
